<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/viewProfileLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Edit"
                android:background="@drawable/ic_edit_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:id="@+id/editBtn"/>
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="100dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/imagetst"/>
            <TextView
                android:id="@+id/profileUsername"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_below="@id/profileImage"
                android:layout_centerHorizontal="true"
                android:text="Username"/>

            <LinearLayout
                android:id="@+id/detailProfileLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileUsername"
                android:layout_marginTop="5mm"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:id="@+id/genderLayout">

                    <TextView
                        android:id="@+id/genderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender: "
                        android:textColor="#000000"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/genderValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="24dp" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:id="@+id/ageLayout">

                <TextView
                    android:id="@+id/ageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age: "
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/ageValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="24dp" />
            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailProfileLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailProfileLayout1"
                android:layout_marginTop="4mm"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:id="@+id/weightLayout">

                    <TextView
                        android:id="@+id/weightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight: "
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/weightValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="24dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:id="@+id/heightLayout">

                    <TextView
                        android:id="@+id/heightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height: "
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/heightValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6'6"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="24dp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/aboutmeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About me:"
                android:textColor="#000000"
                android:layout_below="@id/detailProfileLayout2"
                android:paddingTop="40dp"
                android:layout_centerHorizontal="true"
                android:textSize="24dp" />
            <TextView
                android:id="@+id/aboutmeDescription"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_below="@id/aboutmeText"
                android:layout_centerHorizontal="true"
                android:text="Something about myself."/>

            <Button
                android:id="@+id/changePasswordBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutmeDescription"
                android:layout_marginTop="25dp"
                android:text="Change Password" />

            <Button
                android:id="@+id/viewOtherProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/changePasswordBtn"
                android:layout_marginTop="25dp"
                android:text="View other profile" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/editProfileLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_save_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:id="@+id/saveBtn"/>
            <ImageView
                android:id="@+id/editProfileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="100dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/imagetst"/>
            <TextView
                android:id="@+id/editProfileUsername"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_below="@id/editProfileImage"
                android:layout_centerHorizontal="true"
                android:text="Username"/>

            <LinearLayout
                android:id="@+id/editDetailProfileLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editProfileUsername"
                android:layout_marginTop="4.04mm"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:id="@+id/genderEditLayout">

                    <TextView
                        android:id="@+id/editGenderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender: "
                        android:textColor="#000000"
                        android:textSize="24dp" />
                    <EditText
                        android:id="@+id/editGenderValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:paddingLeft="1.9mm"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:id="@+id/editAgeLayout">

                    <TextView
                        android:id="@+id/editAgeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age: "
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="24dp" />

                    <EditText
                        android:id="@+id/editAgeValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="#000000"
                        android:paddingLeft="1.9mm"
                        android:gravity="center"
                        android:textSize="24dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/editDetailProfileLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editDetailProfileLayout1"
                android:layout_marginTop="0.1mm"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:id="@+id/editWeightLayout">

                    <TextView
                        android:id="@+id/editWeightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight: "
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="24dp" />
                    <EditText
                        android:id="@+id/editWeightValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:paddingLeft="1.9mm"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:id="@+id/editHeightLayout">

                    <TextView
                        android:id="@+id/editHeightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height: "
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="24dp" />

                    <EditText
                        android:id="@+id/editHeightValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6'6"
                        android:textColor="#000000"
                        android:paddingLeft="1.9mm"
                        android:gravity="center"
                        android:textSize="24dp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/aboutmeText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About me:"
                android:textColor="#000000"
                android:layout_below="@id/editDetailProfileLayout2"
                android:paddingTop="5mm"
                android:layout_centerHorizontal="true"
                android:textSize="24dp" />
            <EditText
                android:id="@+id/editAboutmeDescription"
                android:layout_marginTop="0.5mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_below="@id/aboutmeText2"
                android:layout_centerHorizontal="true"
                android:text="Something about myself."/>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>